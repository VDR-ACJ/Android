            Cipher cipherd = Cipher.getInstance("AES/CBC/PKCS5PADDING");
            cipherd.init(Cipher.ENCRYPT_MODE, DnewKey);
            byte[] ciphertextD = cipherd.doFinal(textonovo.getBytes());
